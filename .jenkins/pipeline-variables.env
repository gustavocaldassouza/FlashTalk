# Environment variables for Jenkins Pipeline
# Copy these to your Jenkins job configuration or use as reference

# Docker Registry Configuration
DOCKER_REGISTRY_URL=docker.io
DOCKER_REGISTRY_NAMESPACE=your-namespace

# Application Configuration
APP_NAME=flashtalk
BACKEND_IMAGE_NAME=flashtalk-api
FRONTEND_IMAGE_NAME=flashtalk-ui

# Kubernetes Configuration
K8S_NAMESPACE_STAGING=flashtalk-staging
K8S_NAMESPACE_PRODUCTION=flashtalk-production

# Database Configuration (for CI environment)
CI_DB_PASSWORD=FlashTalk123!
CI_DB_SERVER=sqlserver
CI_DB_NAME=FlashTalkDb

# JWT Configuration (use strong keys in production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-that-should-be-at-least-32-characters-long
JWT_ISSUER=FlashTalk

# Build Configuration
DOTNET_VERSION=8.0
NODE_VERSION=18

# Timeout Configuration (in seconds)
BUILD_TIMEOUT=1800
DEPLOY_TIMEOUT=300

# Quality Gates
MAX_LINT_WARNINGS=0
SECURITY_SCAN_ENABLED=true